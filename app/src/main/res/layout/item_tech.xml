<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_tech_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="shareView"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorCard"
        app:cardElevation="2dp"
        app:contentPadding="8dp"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_tech_icon"
                    android:layout_width="@dimen/tech_icon_size"
                    android:layout_height="@dimen/tech_icon_size"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:src="@mipmap/ic_android"/>
                <TextView
                    android:id="@+id/tv_tech_title"
                    android:layout_marginStart="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="14sp"
                    android:textColor="@color/colorText"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/tv_tech_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comment_reply"
                    android:drawableStart="@mipmap/ic_author"
                    android:drawablePadding="6dp"/>
                <TextView
                    android:layout_marginEnd="3dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/tv_tech_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comment_reply"
                    android:drawableStart="@mipmap/ic_time"
                    android:drawablePadding="6dp"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>